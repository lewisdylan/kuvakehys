<div id="new-group">
  <%= form_for(@group, html: {class: 'group-form pure-form pure-form-stacked'}) do |f| %>
    <fieldset class="group-identifier">
      <legend>Name your easy to remember photo album</legend>
      <div class="pure-control-group">
        <div class="identifier">
          <%= f.text_field :email, required: true %>@<%= ENV['SMTP_DOMAIN'] %>
        </div>
        All photos sent to this address will now be collected and printed.
        Share this address with your loved ones so that they can participate too!
      </div>
    </fieldset>


    <fieldset class="group-recipient">
      <legend>To whom shall we send the photos?</legend>

      <div class="pure-control-group">
        <%= f.label :recipient_name, 'Full name' %>
        <%= f.text_field :recipient_name, required: true, class: 'pure-input-1'  %>
      </div>
      <div class="pure-control-group">
        <%= f.label :recipient_address_1, 'Street' %>
        <%= f.text_field :recipient_address_1, required: true, class: 'pure-input-1'  %>
      </div>
      <div class="pure-control-group">
        <%= f.label :recipient_address_2, 'c/o' %>
        <%= f.text_field :recipient_address_2, class: 'pure-input-1'  %>
      </div>
      <div class="pure-control-group">
        <%= f.label :recipient_postal_code, 'ZIP' %>
        <%= f.text_field :recipient_postal_code, required: true, class: 'pure-input-1'  %>
      </div>
      <div class="pure-control-group">
        <%= f.label :recipient_city, 'City' %>
        <%= f.text_field :recipient_city, required: true, class: 'pure-input-1'  %>
      </div>
      <div class="pure-control-group">
        <%= f.label :recipient_country, 'Country' %>
        <%= f.country_select :recipient_country, {}, { class: 'pure-input-1' } %>
      </div>

    </fieldset>

    <fieldset>
      <legend>Your email address</legend>
      <div class="pure-control-group">
        <%= f.label :owner_email, 'Your E-Mail address to manage this group' %>
        <%= f.text_field :owner_email, required: true, class: 'pure-input-1' %>
      </div>

      <div class="actions call-to-action small">
        <%= f.submit "Next", class: 'button pure-button button-go' %>
      </div>

    </fieldset>
  <% end %>

</div>
