<p id="notice"><%= notice %></p>

<h1><%= @user.name %></h1>
<p>
  <strong>Phone:</strong>
  <%= @user.phone %>
</p>
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>


<h1>Listing Photos</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Group</th>
      <th>Sender e-mail</th>
      <th>Sender name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.photos.each do |photo| %>
      <tr>
        <th><%= link_to(image_tag(photo.picture.url(:small)), admin_photo_path(photo)) %></td>
        <td><%= link_to(photo.group.email, admin_group_url(photo.group)) if photo.group %></td>
        <td><%= photo.sender_email %></td>
        <td><%= photo.sender_name %></td>
        <td><%= link_to 'Show', admin_photo_path(photo) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
