<p id="notice"><%= notice %></p>

<h1>Listing Groups</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Photo limit</th>
      <th>Photos missing</th>
      <th>Recipients</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.email, admin_group_path(group) %></td>
        <td><%= group.photo_limit %></td>
        <td><%= group.photos_missing_for_next_order %></td>
        <td><%= group.recipient_names %></td>
        <td><%= link_to 'Show', admin_group_path(group) %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Destroy', admin_group_path(group), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @groups %>
<br>

<%= link_to 'New Group', new_group_path %>
